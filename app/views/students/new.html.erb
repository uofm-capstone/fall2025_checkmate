<h1 class="mb-4">Add New Student</h1>

<%= form_with model: @student, local: true do |f| %>
  <div class="mb-3">
    <%= f.label :full_name, class: "form-label" %>
    <%= f.text_field :full_name, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :github_username, "GitHub Username", class: "form-label" %>
    <%= f.text_field :github_username, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :team_id, "Team", class: "form-label" %>
    <%= f.collection_select :team_id, @teams, :id, :name, { prompt: "Select Team" }, class: "form-select" %>
  </div>

  <div class="d-flex justify-content-between">
    <%= link_to "Back", students_path, class: "btn btn-secondary" %>
    <%= link_to "New student", new_student_path, class: "btn btn-primary" %>
  </div>
<% end %>

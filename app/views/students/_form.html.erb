<%= form_with model: @student, url: @student.persisted? ? update_student_path(@student) : create_student_path do |f| %>
  <%# Railsâ€™ PATCH needs a hidden method override when using a custom URL %>
  <% if @student.persisted? %>
    <%= hidden_field_tag :_method, :patch %>
  <% end %>

  <div class="mb-3">
    <%= f.label :full_name %>
    <%= f.text_field :full_name, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :github_username, "Github Username" %>
    <%= f.text_field :github_username, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :team_name, "Team Name" %>
    <%= f.text_field :team_name, class: "form-control", required: true %>
  </div>

  <div class="d-flex gap-2">
    <%= link_to "Cancel", students_path, class: "btn btn-link" %>
    <%= f.submit (@student.persisted? ? "Save changes" : "Create student"), class: "btn btn-primary" %>
  </div>
<% end %>

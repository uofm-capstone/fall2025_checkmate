<!DOCTYPE html>
<html>
<head>
  <title>Dashboard</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <style>
    .header {
      background-color: #f8f9fa;
      padding: 10px 20px;
      text-align: center;
      font-size: 22px;
      color: #333;
    }
    .table th, .table td {
      vertical-align: middle;
    }
    .btn-sm {
      padding: .25rem .5rem;
      font-size: .875rem;
      line-height: 1.5;
      border-radius: .2rem;
    }
    .role-badge {
      display: inline-block;
      padding: 0.25em 0.6em;
      font-size: 75%;
      font-weight: 700;
      line-height: 1;
      text-align: center;
      white-space: nowrap;
      vertical-align: baseline;
      border-radius: 0.25rem;
      color: white;
    }
    .role-admin { background-color: #dc3545; }
    .role-ta { background-color: #fd7e14; }
    .role-student { background-color: #28a745; }
    .role-guest { background-color: #6c757d; }
  </style>
</head>
<body>
  <div class="header">
    Dashboard
    <% if current_user.admin? %>
      <span class="role-badge role-admin">Admin Access</span>
    <% elsif current_user.ta? %>
      <span class="role-badge role-ta">TA Access</span>
    <% end %>
  </div>

  <% @semesters.each do |semester| %>
    <div class="container mt-4">
      <h2><%= semester.semester %> <%= semester.year %></h2>
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th>ID</th>
            <th>Email</th>
            <th>Role</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= user.email %></td>
              <td>
                <%= role_badge(user) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>

  <div class="container mt-4">
    <h2>User Management</h2>
    <table class="table">
      <thead class="thead-dark">
        <tr>
          <th>ID</th>
          <th>Email</th>
          <th>Role</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.email %></td>
            <td>
              <%= role_badge(user) %>
            </td>
            <td class="d-flex">
              <% if can? :update, user %>
                <div class="dropdown mr-2">
                  <button class="btn btn-sm btn-primary dropdown-toggle" type="button" id="roleDropdown<%= user.id %>" data-bs-toggle="dropdown" aria-expanded="false">
                    Change Role
                  </button>
                  <ul class="dropdown-menu" aria-labelledby="roleDropdown<%= user.id %>">
                    <% assignable_roles_for(user, current_user).each do |role| %>
                      <li>
                        <%= button_to role.titleize, admin_update_role_path(user, role: role), method: :patch, class: "dropdown-item" %>
                      </li>
                    <% end %>
                  </ul>
                </div>
              <% end %>

              <% if can? :destroy, user %>
                <%= button_to "Delete", admin_delete_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</body>
</html>
